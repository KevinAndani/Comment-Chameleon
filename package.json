{
  "name": "better-comments-enhanced-snippets",
  "displayName": "Better Comments Enhanced Snippets",
  "description": "Enhanced comment highlighting with emojis and more categories",
  "version": "0.0.2",
  "publisher": "KevinAndani",
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinAndani/better-comment-tags.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Formatters",
    "Snippets"
  ],
  "extensionDependencies": [
    "aaron-bond.better-comments"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "better-comments-enhanced.applyStyles",
        "title": "Better Comments Enhanced: Apply Enhanced Comment Styles"
      },
      {
        "command": "better-comments-enhanced.editTags",
        "title": "Better Comments Enhanced: Edit Custom Tags"
      }
    ],
    "snippets": [
      {
        "language": "javascript,typescript,c,cpp,csharp,java",
        "path": "./snippets/general.code-snippets"
      },
      {
        "language": "python",
        "path": "./snippets/python.code-snippets"
      },
      {
        "language": "html,xml,svg",
        "path": "./snippets/html.code-snippets"
      }
    ],
    "configuration": {
      "title": "Better Comments Enhanced",
      "properties": {
        "betterCommentsEnhanced.customTags": {
          "type": "array",
          "default": [],
          "description": "Custom comment tags defined by the user",
          "items": {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "backgroundColor": {
                "type": "string"
              },
              "strikethrough": {
                "type": "boolean"
              },
              "underline": {
                "type": "boolean"
              },
              "bold": {
                "type": "boolean"
              },
              "italic": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.85.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.3.2"
  }
}
