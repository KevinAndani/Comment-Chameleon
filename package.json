{
  "name": "comment-chameleon",
  "displayName": "Comment Chameleon",
  "description": "Enhance your comments with customizable tags, styles, and snippets.",
  "version": "1.6.2",
  "publisher": "KevinAndani",
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinAndani/comment-chameleon.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Formatters",
    "Snippets"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#383838",
    "theme": "dark"
  },
  "keywords": [
    "comments",
    "better comments",
    "todo",
    "highlighting",
    "tags",
    "emoji"
  ],
  "contributes": {
    "commands": [
      {
        "command": "comment-chameleon.applyStyles",
        "title": "Comment Chameleon: Apply Enhanced Comment Styles"
      },
      {
        "command": "comment-chameleon.editTags",
        "title": "Comment Chameleon: Edit Custom Tags"
      },
      {
        "command": "comment-chameleon.editLanguages",
        "title": "Comment Chameleon: Edit Custom Languages"
      }
    ],
    "snippets": [
      {
        "language": "javascript,typescript,c,cpp,csharp,java",
        "path": "./snippets/general.code-snippets"
      },
      {
        "language": "python",
        "path": "./snippets/python.code-snippets"
      },
      {
        "language": "html,xml,svg",
        "path": "./snippets/html.code-snippets"
      },
      {
        "language": "javascript,typescript,c,cpp,csharp,java",
        "path": "./snippets/general-custom.code-snippets"
      },
      {
        "language": "python",
        "path": "./snippets/python-custom.code-snippets"
      },
      {
        "language": "html,xml,svg",
        "path": "./snippets/html-custom.code-snippets"
      }
    ],
    "configuration": {
      "title": "Comment Chameleon",
      "properties": {
        "commentChameleon.useEmojis": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable emojis in comment snippets globally"
        },
        "commentChameleon.customTags": {
          "type": "array",
          "default": [],
          "description": "Custom comment tags defined by the user",
          "items": {
            "type": "object",
            "properties": {
              "tag": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "backgroundColor": {
                "type": "string"
              },
              "strikethrough": {
                "type": "boolean"
              },
              "underline": {
                "type": "boolean"
              },
              "bold": {
                "type": "boolean"
              },
              "italic": {
                "type": "boolean"
              },
              "emoji": {
                "type": "string"
              },
              "useEmoji": {
                "type": "boolean"
              }
            }
          }
        },
        "commentChameleon.userDefinedLanguages": {
          "type": "array",
          "default": [],
          "description": "User-defined language configurations for custom comment syntax",
          "items": {
            "type": "object",
            "properties": {
              "language": {
                "type": "string"
              },
              "singleLineComment": {
                "type": "string"
              },
              "multiLineStart": {
                "type": "string"
              },
              "multiLineEnd": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  }
}
